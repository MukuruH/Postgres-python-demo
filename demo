CREATE TABLE parcel(
id SERIAL PRIMARY KEY,
name VARCHAR(100), 
source VARCHAR(100), 
destination VARCHAR(100), 
price INT, 
delivered BOOLEAN, 
delivery_date DATE
);


INSERT INTO parcel (name, source, destination, price, delivery_date, delivered) values ('bag', 'jinja', 'mbarara', 20000, '2018-04-23', False);


